<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaconsultaevento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wazzyeventos.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/text_nome_evento_consultaEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Evento: " />

    <TextView
        android:id="@+id/text_local_evento_consultaEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local do Evento: " />

    <TextView
        android:id="@+id/text_desc_evento_consultaEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Evento: " />

    <TextView
        android:id="@+id/text_nome_dono_consultaEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dono: " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_aval_consultaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avaliação" />

        <RadioButton
            android:id="@+id/rb_1estrela_consultaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_2estrela_consultaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_3estrela_consultaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_4estrela_consultaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_5estrela_consultaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_aval_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliar" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_comentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentar" />

    <Button
        android:id="@+id/bt_denunciar_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denunciar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <Button
        android:id="@+id/bt_gps_consulta_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Localizacao" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_weight="0.69" >

        <RatingBar
            android:id="@+id/rtbar_geral_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/aval_geral_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rtbar_geral_evento"
            android:layout_centerHorizontal="true"
            android:text="Avaliação Geral do Evento" />
    </RelativeLayout>

</LinearLayout>