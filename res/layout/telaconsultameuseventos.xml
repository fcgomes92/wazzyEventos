<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/telaconsultaevento"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wazzyeventos.MainActivity$PlaceholderFragment" >
    
    <TextView
        android:id="@+id/text_nome_evento_consultameuEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Evento: " />

    <TextView
        android:id="@+id/text_local_evento_consultameuEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local do Evento: " />

    <TextView
        android:id="@+id/text_desc_evento_consultameuEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Evento: " />

    <TextView
        android:id="@+id/text_nome_dono_consultameuEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dono: " />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/bt_editar_consltameuEvento"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Editar" />

        <Button
            android:id="@+id/bt_deletar_consultameuEvento"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Deletar" />
    </RelativeLayout>
    
</LinearLayout>
